{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LevLang",
  "scopeName": "source.levlang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#properties"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.levlang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.levlang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.levlang",
          "match": "\\b(game|player|enemy|road|ui|gameover|sprite|scene|on|when|update|draw|if|else|while|for|return|start)\\b"
        },
        {
          "name": "keyword.other.levlang",
          "match": "\\b(movement|speed|spawn|collide|offscreen|lanes|scrolling|at|auto_fps|resizable|icon)\\b"
        },
        {
          "name": "storage.type.levlang",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.levlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.levlang",
              "match": "\\\\."
            },
            {
              "name": "variable.other.levlang",
              "match": "\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.levlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.levlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.levlang",
          "match": "\\b\\d+(\\.\\d+)?(sec|ms)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.levlang",
          "match": "\\b(rand|random|collides|draw_rect|draw_circle|draw_text|screen\\.fill|start)\\b"
        },
        {
          "name": "support.function.levlang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "variable.other.property.levlang",
          "match": "\\b(x|y|width|height|color|title|spawn_rate|topleft|topright|center|bottomleft|bottomright)\\b"
        },
        {
          "name": "variable.parameter.levlang",
          "match": "\\b(wasd_arrows|arrows|wasd|random_lane|random_top|random|down|up|left|right|gameover|destroy|score)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.levlang",
          "match": "(\\+|\\-|\\*|\\/|\\=|\\:|\\,|\\{|\\}|\\(|\\))"
        }
      ]
    }
  }
}
